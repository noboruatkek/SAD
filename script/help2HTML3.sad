       Write[f,"<H3><A NAME=L",nlabel,">\n",h[[1]],"</A></H3>"];
       Flush[f];
       Write[f,"<PRE>",ReplaceLaTeX[h[[2]]],"\n</PRE>\n"];
       r=GetLabel[h[[3]]];
       If[r<=>{},
         Write[f,"<PRE>See also:"];
         (WriteString[f," ",Labels[#]];
           If[(c+=StringLength[Labels[#]]-15)>col,
             Write[f,""];
             c=0])&/@r;
         Write[f,"</PRE>"]
         ];
       If[Length[h[[4]]]>0,
         If[ul<=0,Write[f,"<UL>"]];
         Scan[WriteHTML[f,#,ul-1]&,h[[4]]];
         If[ul<=0,Write[f,"</UL>"]]]];

